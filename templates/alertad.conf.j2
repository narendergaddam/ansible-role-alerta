{% endif %}

{% if 'telegram' in alerta_server_plugins %}
TELEGRAM_TOKEN = '{{ alerta_server_telegram_token }}'
TELEGRAM_CHAT_ID = '{{ alerta_server_telegram_chat_id }}'
TELEGRAM_TEMPLATE = {{ alerta_server_telegram_template | default() }}
